<% content_for :page_title, @post.title %>

<div class="show-page">
  <%= image_tag @post.image.medium %>
  <div class="post-details">
    <h2>
      <%= @post.title %>
    </h2>
    <p>
      <%= @post.body %>
    </p>
    <div class="post-actions">
      <%= link_to "Edit post", edit_post_path(@post), class:"button-secondary" %>
      <%= link_to "Delete post", post_path(@post), method: :delete, data: {confirm: "Do you really want to delete this amazing post?"}, class:"button-tertiary" %>
    </div>
  </div>
</div>
