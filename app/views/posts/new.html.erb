<% content_for :page_title, "Add a new post on Noto" %>

<section class="form">
  <%= simple_form_for @post do |f| %>

    <% if @post.errors.any? %>
      <div class="errors">
        <% @post.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </div>
    <% end %>

    <h2>New post</h2>
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
    <p class="hint">
      Keep it short and juicy
    </p>

    <%= f.label :body %>
    <%= f.text_area :body, :required => true %>
    <p class="hint">
    Ain't nobody has time for that, keep it in 400 characters
    </p>

    <%= f.label :image, "Choose an image" %>
    <%= f.file_field :image, :required => true %>

    <%= f.button :submit, class:"button-primary" %>
  <% end %>
</section>
